<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".SeraApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SERA_Application"
        android:usesCleartextTraffic="true"
        tools:targetApi="34">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SERA_Application">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.example.sera_application.presentation.ui.payment.PaymentActivity"
            android:exported="true"
            android:theme="@style/Theme.SERA_Application">

            <!-- PayPal return -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="sera"
                    android:host="paypal.return" />
            </intent-filter>

            <!-- PayPal cancel -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="sera"
                    android:host="paypal.cancel" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.example.sera_application.presentation.ui.payment.PaymentHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.SERA_Application" />

        <activity
            android:name="com.example.sera_application.presentation.ui.payment.OrganizerPaymentManagementActivity"
            android:exported="false"
            android:theme="@style/Theme.SERA_Application" />

        <activity
            android:name="com.example.sera_application.presentation.ui.payment.PaymentStatusActivity"
            android:exported="false"
            android:theme="@style/Theme.SERA_Application" />

        <activity
            android:name="com.example.sera_application.presentation.ui.payment.ReceiptActivity"
            android:exported="false"
            android:theme="@style/Theme.SERA_Application" />

        <activity
            android:name="com.example.sera_application.presentation.ui.payment.RefundRequestActivity"
            android:exported="false"
            android:theme="@style/Theme.SERA_Application" />

        <!-- FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />

        </provider>

    </application>

</manifest>